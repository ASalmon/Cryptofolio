<!-- top navigation -->
<nav class="navbar navbar-dark bg-primary">
  <div class="navbar-header">
    <a class="navbar-brand" href="#" id="brand-logo">Cryptofolio</a>
  </div>
</nav>

<!-- below top navigation -->
<div class="container-fluid">
  <div class="row">

    <!-- left navigation -->
    <div class="col-2" id="left-nav">
      <a href="#" class="list-group-item list-group-item-action active"><i class="fas fa-chart-line"></i>Dashboard</a>
      <a href="#" class="list-group-item list-group-item-action"><i class="fas fa-balance-scale"></i>Buy/Sell</a>
      <a href="#" class="list-group-item list-group-item-action"><i class="fas fa-book"></i>Accounts</a>
      <a href="#" class="list-group-item list-group-item-action"><i class="fas fa-toolbox"></i>Tools</a>
      <a href="#" class="list-group-item list-group-item-action disabled"><i class="fas fa-cogs"></i>Settings</a>
    </div>

    <!-- main content area -->
    <div class="col-10" id="main-content-area">
      <div class="row">
        <div class="col-sm-6">
          <div class="card">
            <div class="card-header text-primary">
              Price Chart
            </div>
            <div class="btn-toolbar" id="coin-buttons">
              <button type="button" class="btn btn-primary btn-sm active coin-button" data-button="BTC">BTC</button>
              <button type="button" class="btn btn-primary btn-sm coin-button" data-button="ETH">ETH</button>
              <button type="button" class="btn btn-primary btn-sm coin-button" data-button="LTC">LTC</button>
              <button type="button" class="btn btn-primary btn-sm coin-button" data-button="XRP">XRP</button>
              <button type="button" class="btn btn-primary btn-sm coin-button" data-button="XMR">XMR</button>
            </div>
            <canvas id="seven-day-performance" width="400" height="300"></canvas>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card">
            <div class="card-header text-primary">
              Portfolio
            </div>
            <div class="container">
              <div class="row">
                <div class="col-md-6 balance-section">
                </div> 
                <div class="col-md-6 chart-section">
                  <canvas id="holdings-doughnut-chart" width="50" height="50"></canvas>
                </div> 
              </div>
            </div>
            <div id="partial-coin-snapshot">
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="card">
            <div class="card-header text-primary">
              Recent Transactions
            </div>
            <div id="transaction-list">
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card" id="news-feed">
            <div class="card-header text-primary">
              Latest News
            </div>
            <ul class="list-group list-group-flush">
              {{#each newsFeed}}
                <li class="list-group-item">
                  <img src="{{imageUrl}}"></img>
                  <a href="{{link}}">{{title}}</a>
                </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
