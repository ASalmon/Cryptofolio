{{> top-nav}}

<!-- below top navigation -->
<div class="container-fluid">
  <div class="row">

    {{> left-nav}}

    <!-- Modal content-->
    <div id="myModal" class="modal fade" data-keyboard="false" data-backdrop="static" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
              <h3>Login</h3>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
                <label for="user-email">Email address</label>
                <input type="email" class="form-control" id="user-email" aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password">
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="remember-me">
                <label class="form-check-label" for="remember-me">Remember me on this computer</label>
              </div>
              <button type="submit" class="btn btn-primary mt-2" id="submit-login-btn">Submit</button>
              <div id="login-error-message">Your email or password is invalid</div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- main content area -->
    <div class="col-10" id="main-content-area" style="visibility: hidden">
      <div class="row">
        <div class="col-sm-6">
          <div class="card" id="price-card">
            <div class="card-header text-primary">
              <h5>Price Chart</h5>
            </div>
            <div class="btn-toolbar" id="coin-buttons">
              <button type="button" class="btn btn-primary btn-sm active coin-button" data-button="BTC">BTC</button>
              <button type="button" class="btn btn-primary btn-sm coin-button" data-button="ETH">ETH</button>
              <button type="button" class="btn btn-primary btn-sm coin-button" data-button="LTC">LTC</button>
              <button type="button" class="btn btn-primary btn-sm coin-button" data-button="XRP">XRP</button>
              <button type="button" class="btn btn-primary btn-sm coin-button" data-button="XMR">XMR</button>
            </div>
            <canvas id="seven-day-performance" width="400" height="300"></canvas>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card" id="portfolio-card">
            <div class="card-header text-primary">
              <h5>Portfolio Summary</h5>
            </div>
            <div class="card-body">
              <div class="container">
                <div class="row porfolio-pie">
                  <div class="col-sm-6 balance-section">
                    <div id="portfolio-total">
                    </div>
                  </div> 
                  <div class="col-sm-6 chart-section">
                    <canvas id="holdings-doughnut-chart" width="50" height="50"></canvas>
                  </div> 
                </div>
                <div class="row porfolio-coins">
                  <div id="partial-coin-snapshot">
                  </div>
                </div>
                <div class="row porfolio-bottom">
                  <a href="#">View Account</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="card" id="transaction-card">
            <div class="card-header text-primary">
              <h5>Recent Transactions</h5>
            </div>
            <div id="transaction-list">
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card" id="news-feed">
            <div class="card-header text-primary">
              <h5>Latest News</h5>
            </div>
            <ul class="list-group list-group-flush">
              {{#each newsFeed}}
                <li class="list-group-item">
                  <div class="news-thumb">
                    <img src="{{imageUrl}}"></img>
                  </div>
                  <div class="news-content">
                    <div class="news-title"><a href="{{link}}" target="_blank">{{title}}</a></div>
                  </div>
                </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
      <br>
     </div>
  </div>
</div>

