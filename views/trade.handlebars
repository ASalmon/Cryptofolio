<!-- below top navigation -->
<div class="container-fluid">
  <div class="row">

    {{> left-nav}}

    <!-- main content area -->
    <div class="col-10" id="main-content-area">
      <div class="row">
        <div class="col-sm-6">
          <div class="card">
            <div class="card-header text-primary">
              Buy/Sell
            </div>
            <div>
              <form id="trade">
                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Coin</label>
                <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                  <option selected>Choose...</option>
                  <option value="1">BitCoin (BTC)</option>
                  <option value="2">Ethereum (ETC)</option>
                  <option value="3">LiteCoin (LTC)</option>
                  <option value="3">Ripple (XRP)</option>
                  <option value="3">XMR (Monero)</option>
                </select>
                {{!-- <label class="sr-only" for="quantity"></label> --}}
                <div class="input-group mb-2 mr-sm-2">
                  <div class="input-group-prepend">
                    <div class="input-group-text">Quantity</div>
                  </div>
                  <input type="text" class="form-control" id="quantity" placeholder="12345">
                </div>
              
                  <button type="submit" class="btn btn-primary mb-2">Submit</button>
            
              </form>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card">
            <div class="card-header text-primary">
              Portfolio
            </div>
            <div class="container">
              <div class="row">
                <div class="col-md-6 balance-section">
                </div> 
                <div class="col-md-6 chart-section">
                  <canvas id="holdings-doughnut-chart" width="50" height="50"></canvas>
                </div> 
              </div>
            </div>
            <div id="partial-coin-snapshot">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
