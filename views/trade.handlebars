{{> top-nav}}

<!-- below top navigation -->
<div class="container-fluid">
  <div class="row">

    {{> left-nav}}

    <!-- main content area -->
    <div class="col-10" id="main-content-area">
      <div class="row">
        <div class="col-sm-6">
          <div class="card">
            <div class="card-header text-primary">
              <h5>Buy/Sell</h5>
            </div>
            <div class="card-body">
              <div class="container">
                <table class="table table-condensed">
                  <thead>
                    <tr>
                      <th>Coin</th>
                      <th>Mkt Price</th>
                    </tr>
                  </thead>
                  <tbody id="price-table-body">
                  </tbody>
                </table>
              </div>
              <form id="trade">
                <select class="custom-select mt-3" id="coin-to-trade">
                  <option value="BTC" selected>BitCoin (BTC)</option>
                  <option value="ETH">Ethereum (ETC)</option>
                  <option value="LTC">LiteCoin (LTC)</option>
                  <option value="XRP">Ripple (XRP)</option>
                  <option value="XMR">Monero (XMR)</option>
                </select>
                <div class="input-group mt-3">
                  <div class="input-group-prepend">
                    <div class="input-group-text">Qty</div>
                  </div>
                  <input type="text" class="form-control " id="quantity" placeholder="12345">
                </div>
                <div class="custom-control custom-radio mt-3">
                  <input type="radio" id="buy-radio" name="trade-radio" value="buy" class="custom-control-input">
                  <label class="custom-control-label" for="buy-radio">Buy</label>
                </div>
                <div class="custom-control custom-radio">
                  <input type="radio" id="sell-radio" name="trade-radio" value="sell" class="custom-control-input">
                  <label class="custom-control-label" for="sell-radio">Sell</label>
                </div>
                  <button type="submit" class="btn btn-primary mt-3" id="submit-trade">Submit</button>
              </form>
              <div id="current-coin-price" class="ml-5 mt-3">
                  <h3>Total Price: <span id="total-price"></span></h3>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card" id="portfolio-card">
            <div class="card-header text-primary">
              <h5>Portfolio Summary</h5>
            </div>
            <div class="card-body">
              <div class="container">
                <div class="row porfolio-pie">
                  <div class="col-sm-6 balance-section">
                    <div id="portfolio-total">
                    </div>
                  </div> 
                  <div class="col-sm-6 chart-section">
                    <canvas id="holdings-doughnut-chart" width="50" height="50"></canvas>
                  </div> 
                </div>
                <div class="row porfolio-coins">
                  <div id="partial-coin-snapshot">
                  </div>
                </div>
                <div class="row porfolio-bottom">
                  <a href="#">View Account</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
